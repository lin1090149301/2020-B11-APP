<view class="page" data-weui-theme="{{theme}}">
    <view class="weui-form">
        <view class="weui-form__text-area">
            <h2 class="weui-form__title">修改个人信息</h2>
        </view>
        <form bindsubmit="formSubmit">
            <view class="weui-form__control-area">
                <view class="weui-cells__group weui-cells__group_form">
                    <!-- <view class="weui-cells__title">表单组标题</view> -->
                    <view class="weui-cells weui-cells_form">
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">姓名</label>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" value="{{user_title1}}" bindinput='input1' />
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">学号</label>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" value="{{user_title2}}" bindinput='input2' />
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">学校</label>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" value="{{user_title3}}" bindinput='input3' />
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">学院</label>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" value="{{user_title4}}" bindinput='input4' />
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">专业</label>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" value="{{user_title5}}" bindinput='input5' />
                            </view>
                        </view>
                    </view>
                </view>
            </view>
            <!-- <view class="weui-form__tips-area">
            <view class="weui-form__tips">表单页提示，居中对齐</view>
        </view> -->
            <view class="weui-form__opr-area">
                <button class="weui-btn weui-btn_primary" form-type="submit">确定</button>
                <button class="weui-btn weui-btn_primary" bindtap='clear'>全部清除</button>
            </view>
            <!-- <view class="weui-form__tips-area">
            <view class="weui-form__tips">表单页提示，居中对齐</view>
        </view> -->
        </form>
    </view>
</view>