<!-- pages/message_details/message_details.wxml -->
<view class="page" data-weui-theme="{{theme}}">
    <view class="weui-form">
        <view class="weui-form__text-area">
            <h2 class="weui-form__title">加入项目申请</h2>
        </view>
        <view class="weui-form__control-area">
            <view class="weui-cells__group weui-cells__group_form">
                <view class="weui-cells__title">项目信息</view>
                <view class="weui-cells weui-cells_form">
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd">
                            <label class="weui-label">项目id：</label>
                        </view>
                        <!-- <view class="weui-cell__bd">
                            <view class="weui-input">{{project_id}}</view>
                        </view> -->
                        <view class="weui-article__p">{{project_id}}</view>
                    </view>
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd">
                            <label class="weui-label">项目名称：</label>
                        </view>
                        <!-- <view class="weui-cell__bd">
                            <view class="weui-input">{{project_name}}</view>
                        </view> -->
                        <view class="weui-article__p">{{project_name}}</view>
                    </view>
                </view>
                <view class="weui-cells__title">申请者信息</view>
                <view class="weui-cells weui-cells_form">
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd">
                            <label class="weui-label">姓名：</label>
                        </view>
                        <!-- <view class="weui-cell__bd">
                            <view class="weui-input">{{applicant_student_number}}</view>
                        </view> -->
                        <view class="weui-article__p">{{applicant_name}}</view>
                    </view>
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd">
                            <label class="weui-label">学校：</label>
                        </view>
                        <!-- <view class="weui-cell__bd">
                            <view class="weui-input">{{applicant_school}}</view>
                        </view> -->
                        <view class="weui-article__p">{{applicant_school}}</view>
                    </view>
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd">
                            <label class="weui-label">学院：</label>
                        </view>
                        <!-- <view class="weui-cell__bd">
                            <view class="weui-input">{{applicant_college}}</view>
                        </view> -->
                        <view class="weui-article__p">{{applicant_college}}</view>
                    </view>
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd">
                            <label class="weui-label">专业：</label>
                        </view>
                        <!-- <view class="weui-cell__bd">
                            <view class="weui-input">{{applicant_major}}</view>
                        </view> -->
                        <view class="weui-article__p">{{applicant_major}}</view>
                    </view>
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd">
                            <label class="weui-label">学号：</label>
                        </view>
                        <!-- <view class="weui-cell__bd">
                            <view class="weui-input">{{applicant_student_number}}</view>
                        </view> -->
                        <view class="weui-article__p">{{applicant_student_number}}</view>
                    </view>
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd">
                            <label class="weui-label">验证信息：</label>
                        </view>
                        <!-- <view class="weui-cell__bd">
                            <view class="weui-input">{{apply_message}}</view>
                        </view> -->
                        <view class="weui-article__p">{{apply_message}}</view>
                    </view>
                </view>
            </view>
        </view>
        <view class="weui-form__opr-area">
            <button class="weui-btn weui-btn_primary" bindtap="accept">同意</button>
            <button class="weui-btn weui-btn_primary" bindtap="refuse">拒绝</button>
        </view>
    </view>
</view>